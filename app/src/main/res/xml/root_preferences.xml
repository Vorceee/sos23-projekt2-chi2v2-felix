<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Inställningar">

        <EditTextPreference
            app:defaultValue="barn"
            app:key="kolumn1"
            app:title="kolumn 1"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:defaultValue="vuxna"
            app:key="kolumn2"
            app:title="kolumn 2"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:defaultValue="spelar"
            app:key="rad1"
            app:title="rad 1"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:defaultValue="spelar inte"
            app:key="rad2"
            app:title="rad 2"
            app:useSimpleSummaryProvider="true" />
        <EditTextPreference
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:defaultValue="0.05"
            app:key="signnifikans"
            app:title="Signifikansnivå"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>



</PreferenceScreen>